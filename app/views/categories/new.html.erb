<%= render 'shared/content_header', title: 'Create a new category' %>

<%= render 'shared/errors', obj: @category %>

<div class="well">
  <%= form_for @category do |f| %>
  <div class="control-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="control-group">
    <%= f.submit "Create category" , class: 'btn btn-success'%>
  </div>
  <% end %>
</div>