<%= render 'shared/content_header', title: 'Create a new category' %>

  <% if @category.errors.any? %>
    <div class="row">
      <div class='alert alert-error span8'>
        <h5>There were some errors:</h5>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %> 

<div class="well">
  <%= form_for @category do |f| %>
  <div class="control-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="control-group">
    <%= f.submit "Create category" , class: 'btn btn-success'%>
  </div>
  <% end %>
</div>