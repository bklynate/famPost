<%= render 'shared/content_header', title: "Post Collection" %> 

<% @posts.each do |post| %>
  <div class='row'>
    <div class="span8 well">
      <% post.categories.each do |category| %>
        <span class='badge'><%= category.name %></span>
      <% end %>

      <h4><%= link_to post.title, post_path(post) %></h4>
      <p><%= post.description %></p>
      <p>
        <span class='quiet'>posted by </span><%= post.creator.username %>
        <small>at <%= time_ago_in_words(post.created_at) %></small>
        <%= link_to ("edit event here"), edit_post_path(post) %>
      </p>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </div>
  </div>
<% end %>